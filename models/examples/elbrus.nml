type QWORD = card(128)
type DWORD = card(64)
type  WORD = card(32)
type HWORD = card(16)
type  BYTE = card(8)
type   BIT = card(1)

op NOP(x: BYTE)
    syntax = format("NOP %d", x)
    image  = format("00000000000000000000000000000000%s", x) 
    action =
    {
    }

op instruction_type = NOP

op instruction(i: instruction_type)
    syntax = i.syntax
    image  = i.image
    action =
    {
        i.action;
    }
