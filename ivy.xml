<ivy-module version="1.3">
    <info organisation="unitesk" module="microtesk"/>
    <configurations>
        <conf name="src"/>
        <conf name="jar"/>
        <conf name="all" extends="src,jar"/>
        <conf name="build" extends="jar" visibility="private"/>
        <conf name="runtime"/>
    </configurations>
    <publications>
        <artifact type="jar" ext="jar" conf="jar"/>
        <artifact type="src" ext="zip" conf="src"/>
        <artifact type="all" ext="zip" conf="all"/>
    </publications>
    <dependencies>
        <!-- Tools -->
        <dependency org="jruby"
                    name="jruby"
                    rev="1.7.25"
                    conf="build->default">
          <artifact name="jruby" type="jar" url="http://s3.amazonaws.com/jruby.org/downloads/1.7.25/jruby-complete-1.7.25.jar"/>
        </dependency>
        <dependency org="junit"
                    name="junit"
                    rev="4.11"
                    conf="build->default" />
        <dependency org="hamcrest"
                    name="hamcrest-core"
                    rev="1.3" 
                    conf="build->default" />
        <dependency org="z3"
                    name="z3"
                    rev="4.3"
                    conf="build->default">
          <artifact name="z3-windows" type="zip" url="http://forge.ispras.ru/repo/z3/z3-4.3.0-x64.zip"/>
          <artifact name="z3-unix" type="tar.gz" url="http://forge.ispras.ru/repo/z3/z3-x64-4.1.tar.gz"/>
          <artifact name="z3-mac" type="zip"     url="http://forge.ispras.ru/repo/z3/z3-4.3.2.7c12ab47165a-x64-osx-10.8.2.zip"/>
        </dependency>
        <dependency org="cvc4"
                    name="cvc4"
                    rev=" 4.1"
                    conf="build->default">
          <artifact name="cvc4-windows" type="exe" url="http://cvc4.cs.nyu.edu/builds/win32-opt/cvc4-1.4-win32-opt.exe"/>
          <artifact name="cvc4-unix" type="bin"    url="http://cvc4.cs.nyu.edu/builds/x86_64-linux-opt/unstable/cvc4-2016-07-20-x86_64-linux-opt"/>
        </dependency>
    </dependencies>
    <conflicts>
        <manager name="all"/>
    </conflicts>
</ivy-module>

